{
	"name": "site",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"prod": "vite dev --host --mode production",
		"build": "vite build",
		"preview": "pnpm build && vite preview",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold error",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:components:update": "playwright test --config playwright.components.config.ts --update-snapshots",
		"test:components": "playwright test --config playwright.components.config.ts",
		"test:service-worker-build": "vitest --config ./vitest.service-worker.config.ts",
		"test:e2e-service-worker": "playwright test --config playwright.sw.config.ts",
		"reset-db": "pnpx tsx ./src/lib/mocks/seed/write-seed-and-reset-db-script.ts",
		"local-kitbook": "link:../../kitbook/packages/kitbook"
	},
	"devDependencies": {
		"@google-cloud/language": "^6.1.1",
		"@google-cloud/translate": "^8.0.3",
		"@google/generative-ai": "^0.2.1",
		"@iconify/json": "^2.2.187",
		"@playwright/test": "1.41.1",
		"@supabase/supabase-js": "^2.39.7",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/adapter-vercel": "^5.1.0",
		"@sveltejs/kit": "^2.5.1",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/d3-dsv": "^3.0.7",
		"@types/node": "^20.11.5",
		"@types/pg": "^8.11.1",
		"@types/youtube": "^0.0.50",
		"@unocss/svelte-scoped": "^0.58.5",
		"comlink": "^4.4.1",
		"d3-dsv": "^3.0.1",
		"idb": "^8.0.0",
		"jieba-wasm": "^0.0.2",
		"kitbook": "1.0.0-beta.20",
		"msw": "2.1.4",
		"openai-edge": "^1.1.1",
		"pg": "^8.11.3",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.4",
		"svelte-pieces": "2.0.0-next.7",
		"tslib": "^2.6.2",
		"type-fest": "^4.10.3",
		"typescript": "^5.3.3",
		"unocss": "^0.58.5",
		"vite": "^5.1.4",
		"vitest": "^1.3.1"
	},
	"type": "module",
	"msw": {
		"workerDirectory": "static"
	}
}