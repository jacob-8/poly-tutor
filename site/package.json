{
	"name": "site",
	"private": true,
	"scripts": {
		"dev": "vite dev --open",
		"build": "vite build",
		"preview": "pnpm build && vite preview",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold error",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:service-worker": "vitest --config ./vitest.service-worker.config.ts",
		"test:e2e": "playwright test",
		"test:e2e:update": "playwright test --update-snapshots",
		"test:components": "playwright test --config playwright.components.config.ts kitbook",
		"test:components:update": "playwright test --config playwright.components.config.ts kitbook --update-snapshots"
	},
	"devDependencies": {
		"@google-cloud/language": "^6.1.1",
		"@google-cloud/translate": "^8.0.2",
		"@iconify/json": "^2.2.87",
		"@playwright/test": "1.39.0",
		"@supabase/supabase-js": "^2.38.5",
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.27.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@types/d3-dsv": "^3.0.7",
		"@types/youtube": "^0.0.50",
		"@unocss/svelte-scoped": "^0.57.3",
		"d3-dsv": "^3.0.1",
		"kitbook": "1.0.0-beta.11",
		"msw": "2.0.9",
		"openai-edge": "^1.1.1",
		"svelte": "^4.2.3",
		"svelte-check": "^3.6.2",
		"svelte-pieces": "2.0.0-next.4",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"unocss": "^0.57.3",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"msw": {
		"workerDirectory": "static"
	}
}